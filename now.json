{
    "version": 2,
    "functions": {
      "api/*.php": {
        "runtime": "now-php@0.0.9"
      }
    },
    "routes": [
      {
        "src": "/assets/(.*)",
        "headers": {
          "cache-control": "s-maxage=604800"
        },
        "dest": "/assets/$1"
      },
      {
        "src": "/(.*)",
        "dest": "api/index.php"
      }
    ]
}